<script>
    $(document).ready(function () {
        $('.record').click(function (e) {
            let day = $('.flaggg').html();
            let readFlag = $('#readFlag')[0].className;
            // debugger
            $.ajax({
                type: 'get',
                url: '/api/readCourse',
                data: { day: day.replace('DAY', '').trim(), readFlag },
                dataType: 'json',
                success: function (res) {
                    console.log('res', res)
                    if (res && res.status) {
                        if (res.status === 'redirect') {
                            location.href = res.redirectUrl
                        }
                        else if (res.status === 'success') {
                            alert('签到成功');
                            setTimeout(() => {
                                location.href = '/read'
                            }, 2000);
                        }
                    }
                }
            })
        })
    })
